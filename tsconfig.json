{
    "extends": "@augu/tsconfig",
    "compilerOptions": {
        "moduleResolution": "node",
        "removeComments": true,
        "types": ["node"],
        "rootDir": "src/",
        "noEmit": true, // unbuild does this for us
        "allowJs": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
